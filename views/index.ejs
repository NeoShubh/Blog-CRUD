    <form action="./comments/new/"> 
        <button type="submit " class="btn btn-outline-info">Create A New Comment</button>
    </form>
    <ul class="list-group">
      <% for(let i of comments){  %>
        <br>
   <li class="list-group-item bg-info p-2 text-dark bg-opacity-25"><strong><%= i.username %></strong> &#8594 <%= i.comment %>
      <a  href="/comments/<%= i.id %>" role="button">Show Full Comment</a></li>

   <%   }  %>
    </ul>
